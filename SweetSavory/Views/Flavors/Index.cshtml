@{
  Layout = "_Layout";
}
@using SweetSavory.Models;

@if (@Model.Count == 0)
{
  <p>No flavors have been added.</p>
}
<ul>
  @foreach (Flavor f in Model)
  {
    <li>@Html.ActionLink($"{f.Name}", "Details", new {id = f.FlavorId})</li>
  }
</ul>

<p>@Html.ActionLink("New Flavor", "Create")</p>
<p>@Html.ActionLink("Back", "Index", "Home")</p>
