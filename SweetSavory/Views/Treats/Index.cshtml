@{
  Layout = "_Layout";
}
@using SweetSavory.Models;

@if (@Model.Count == 0)
{
  <p>No treats have been added.</p>
}
<ul>
  @foreach (Treat t in Model)
  {
    <li>@Html.ActionLink($"{t.Name}", "Details", new {id = t.TreatId})</li>
  }
</ul>

<p>@Html.ActionLink("New Treat", "Create")</p>
<p>@Html.ActionLink("Back", "Index", "Home")</p>
